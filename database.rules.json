{
  "rules": {
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "events": {
      "$eventId": {
        ".read": true,
        ".write": "auth !== null",
        "name": { ".validate": "newData.isString()" },
        "participants": {
          "$number": {
            "name": { ".validate": "newData.isString()" },
            "uid": { ".validate": "newData.isString()" }
          }
        },
        "$other": { ".validate": false }
      }
    }
  }
}
